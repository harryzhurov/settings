# Traffic
#
# WLAN 0
#${if_existing /proc/net/route wlan0}#

# ETH 0
${if_existing /proc/net/route enp3s0}\
${alignc}Internal IP 0: ${addr enp3s0}
Down: ${downspeed enp3s0}/s${alignr}Up: ${upspeed enp3s0}/s
${color4}${downspeedgraph enp3s0 40,220 9000} ${alignr}${upspeedgraph enp3s0 40,220 9000}$color
Today: ${goto 150}${texeci 10 vnstat -i enp3s0| grep "today" | awk '{print $2 $3}'} ${goto 360}${texeci 5 vnstat -i enp3s0| grep "today" | awk '{print $5 $6}'}
Week: ${goto 150}${texeci 10 vnstat -w -i enp3s0| grep "current week" | awk '{print $3 $4}'} ${goto 360}${texeci 5 vnstat -w -i enp3s0| grep "current week" | awk '{print $6 $7}'}
Month: ${goto 150}${texeci 10 vnstat -i enp3s0| grep "`date +"'%y"`" | tail -1 | awk '{print $3 $4}'} ${goto 360}${texeci 5 vnstat -m -i enp3s0| grep "`date +"'%y"`" | tail -1 | awk '{print $6 $7}'}
${endif}
